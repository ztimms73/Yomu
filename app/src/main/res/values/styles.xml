<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Yomu" parent="Theme.Yomu.Base" />

    <style name="Theme.Yomu.Light" parent="Theme.Yomu.Base.Light" />

    <style name="Theme.Yomu.Black" parent="Theme.Yomu.Base.Black" />

    <style name="Theme.Yomu.Notification" parent="@android:style/TextAppearance.StatusBar.EventContent" />

    <style name="Theme.Yomu.Notification.Title" parent="@android:style/TextAppearance.StatusBar.EventContent.Title" />

    <style name="Toolbar">
        <item name="titleMarginStart">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/toolbar_elevation</item>
        <item name="android:transitionName" tools:ignore="NewApi">toolbar</item>
    </style>

</resources>